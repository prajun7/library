<h1 class="sub-header">{{this.updateBookTitle}}</h1>
  <div class="form-container">
    <Input 
      @type="text"
      @value={{this.title}}
      @class="input-field" 
      @id="titleInput" 
      placeholder="Title"
    /> 
    <Input 
      @type="text" 
      @value={{this.author}}  
      @class="input-field" 
      @id="authorInput" 
      placeholder="Author"
    />
    <Input 
      @type="text" 
      @value={{this.genre}}  
      @class="input-field" 
      @id="genreInput" 
      placeholder="Genre"
    />
    <Input 
      @type="number" 
      @value={{this.count}}  
      @id="countInput" 
      placeholder="Count"
    />
    <button 
      type="submit" 
      {{on "click" this.save}}
    >
      Save
    </button>
    <button 
      type="cancel" 
      {{on "click" this.cancel}}
    >
      Cancel
    </button>
</div>