<tr>
    <td>{{@book.title}}</td>
    <td>{{@book.author}}</td>
    <td>{{@book.genre}}</td>
    <td>{{@book.count}}</td>

    <td>
        <LinkTo class="update-btn" @route="book" @model={{@book.id}} reload=true>Update</LinkTo>
    </td>
    <td>
        <button class="delete-btn" {{on "click" this.deleteBook}}>Delete</button>
    </td>
</tr>